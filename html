        registerBtn.addEventListener('click', () => {
            registerModal.style.display = 'flex';
        });
        
        startInvestingBtn.addEventListener('click', () => {
            if (user.loggedIn) {
                depositModal.style.display = 'flex';
            } else {
                registerModal.style.display = 'flex';
            }
        });
        
        newInvestmentBtn.addEventListener('click', () => {
            depositModal.style.display = 'flex';
        });
        
        withdrawBtn.addEventListener('click', () => {
            withdrawModal.style.display = 'flex';
            availableBalance.textContent = `$${user.balance.toFixed(2)}`;
        });
        
        // Fechar modais
        closeButtons.forEach(button => {
            button.addEventListener('click', () => {
                loginModal.style.display = 'none';
                registerModal.style.display = 'none';
                depositModal.style.display = 'none';
                withdrawModal.style.display = 'none';
            });
        });
        
        // Alternar entre m√©todos de pagamento
        paymentMethod.addEventListener('change', (e) => {
            if (e.target.value === 'bank') {
                bankDetails.style.display = 'block';
                paypalOption.style.display = 'none';
            } else if (e.target.value === 'paypal') {
                bankDetails.style.display = 'none';
                paypalOption.style.display = 'flex';
            } else {
                bankDetails.style.display = 'none';
                paypalOption.style.display = 'none';
            }
        });
        
        // Copiar c√≥digo de indica√ß√£o
        copyCodeBtn.addEventListener('click', () => {
            navigator.clipboard.writeText(referralCode.textContent);
            alert('C√≥digo copiado para a √°rea de transfer√™ncia!');
        });
        
        // Login
        document.getElementById('loginForm').addEventListener('submit', (e) => {
            e.preventDefault();
            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;
            
            // Simular login
            if (email && password) {
                user.loggedIn = true;
                user.email = email;
                user.name = email.split('@')[0];
                user.balance = 100.00;
                user.dailyEarnings = 10.00;
                user.totalEarnings = 250.00;
                user.daysLeft = 15;
                user.referralCode = 'INVITE' + Math.floor(1000 + Math.random() * 9000);
                user.referralEarnings = 50.00;
                
                // Verificar se √© admin
                if (email === 'admin@investmony.com') {
                    user.isAdmin = true;
                }
                
                updateUI();
                loginModal.style.display = 'none';
            } else {
                alert('Por favor, preencha todos os campos');
            }
        });
        
        // Registro
        document.getElementById('registerForm').addEventListener('submit', (e) => {
            e.preventDefault();
            const name = document.getElementById('registerName').value;
            const email = document.getElementById('registerEmail').value;
            const password = document.getElementById('registerPassword').value;
            const inviteCode = document.getElementById('inviteCode').value;
            
            if (name && email && password && inviteCode) {
                if (inviteCode.length < 8) {
                    alert('C√≥digo de convite inv√°lido');
                    return;
                }
                
                user.loggedIn = true;
                user.name = name;
                user.email = email;
                user.balance = 0;
                user.dailyEarnings = 0;
                user.totalEarnings = 0;
                user.daysLeft = 0;
                user.referralCode = 'INVITE' + Math.floor(1000 + Math.random() * 9000);
                user.referralEarnings = 0;
                user.memberSince = new Date().toLocaleDateString('pt-BR');
                user.transactions = [];
                
                updateUI();
                registerModal.style.display = 'none';
                depositModal.style.display = 'flex';
            } else {
                alert('Por favor, preencha todos os campos');
            }
        });
        
        // Dep√≥sito
        document.getElementById('depositForm').addEventListener('submit', (e) => {
            e.preventDefault();
            const amount = parseFloat(document.getElementById('depositAmount').value);
            const method = document.getElementById('paymentMethod').value;
            
            if (amount < 10) {
                alert('O dep√≥sito m√≠nimo √© $10');
                return;
            }
            
            if (!method) {
                alert('Por favor, selecione um m√©todo de pagamento');
                return;
            }
            
            if (method === 'bank') {
                const bankName = document.getElementById('bankName').value;
                const accountNumber = document.getElementById('accountNumber').value;
                const routingNumber = document.getElementById('routingNumber').value;
                
                if (!bankName || !accountNumber || !routingNumber) {
                    alert('Por favor, preencha todos os dados banc√°rios');
                    return;
                }
                
                alert(`Dep√≥sito banc√°rio de $${amount} processado! Voc√™ receber√° $${(amount/10).toFixed(2)} por dia.`);
            } else {
                alert('Redirecionando para o PayPal...');
            }
            
            // Processar dep√≥sito
            user.balance += amount;
            user.dailyEarnings = amount / 10;
            user.daysLeft = 30;
            
            // Adicionar transa√ß√£o
            const transaction = {
                type: "Dep√≥sito",
                date: new Date().toLocaleString('pt-BR'),
                amount: amount,
                isPositive: true
            };
            user.transactions.unshift(transaction);
            
            updateUI();
            depositModal.style.display = 'none';
            
            alert(`Dep√≥sito de $${amount.toFixed(2)} realizado com sucesso!`);
        });
        
        // Saque
        document.getElementById('withdrawForm').addEventListener('submit', (e) => {
            e.preventDefault();
            const amount = parseFloat(document.getElementById('withdrawAmount').value);
            const paypalEmail = document.getElementById('paypalEmail').value;
            
            if (amount < 10) {
                alert('O saque m√≠nimo √© $10');
                return;
            }
            
            if (amount > user.balance) {
                alert('Saldo insuficiente');
                return;
            }
            
            if (!paypalEmail.includes('@')) {
                alert('Por favor, insira um e-mail do PayPal v√°lido');
                return;
            }
            
            // Processar saque
            user.balance -= amount;
            
            // Adicionar transa√ß√£o
            const transaction = {
                type: "Saque",
                date: new Date().toLocaleString('pt-BR'),
                amount: amount,
                isPositive: false
            };
            user.transactions.unshift(transaction);
            
            updateUI();
            withdrawModal.style.display = 'none';
            
            alert(`Saque de $${amount.toFixed(2)} solicitado com sucesso! Os fundos ser√£o enviados para ${paypalEmail} em at√© 24 horas.`);
        });
        
        // Logout
        function handleLogout() {
            user.loggedIn = false;
            user.isAdmin = false;
            updateUI();
        }
        
        logoutBtn.addEventListener('click', handleLogout);
        dashboardLogout.addEventListener('click', handleLogout);
        
        // Navega√ß√£o do admin
        adminNavBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                adminNavBtns.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                
                const sectionId = btn.dataset.section + 'Section';
                adminSections.forEach(section => {
                    section.classList.remove('active');
                    if (section.id === sectionId) {
                        section.classList.add('active');
                    }
                });
            });
        });
        
        // Home link
        homeLink.addEventListener('click', (e) => {
            e.preventDefault();
            if (user.loggedIn) {
                if (user.isAdmin) {
                    showAdminPanel();
                } else {
                    showDashboard();
                }
            } else {
                showPublicHome();
            }
        });
        
        // Admin button
        adminBtn.addEventListener('click', () => {
            showAdminPanel();
        });
        
        // Atualizar UI
        function updateUI() {
            if (user.loggedIn) {
                authButtons.style.display = 'none';
                userInfo.style.display = 'flex';
                userAvatar.textContent = user.name.charAt(0).toUpperCase();
                userName.textContent = user.name;
                dashboardAvatar.textContent = user.name.charAt(0).toUpperCase();
                dashboardName.textContent = user.name;
                
                if (user.isAdmin) {
                    adminBtn.style.display = 'inline-flex';
                    showAdminPanel();
                } else {
                    adminBtn.style.display = 'none';
                    showDashboard();
                }
                
                // Atualizar dashboard
                currentBalance.textContent = `$${user.balance.toFixed(2)}`;
                dailyEarnings.textContent = `$${user.dailyEarnings.toFixed(2)}`;
                totalEarnings.textContent = `$${user.totalEarnings.toFixed(2)}`;
                daysLeft.textContent = user.daysLeft;
                expirationDate.textContent = new Date(Date.now() + user.daysLeft * 24 * 60 * 60 * 1000).toLocaleDateString('pt-BR');
                nextPayment.textContent = 'hoje √†s 00:01';
                referralCode.textContent = user.referralCode;
                referralEarnings.textContent = `$${user.referralEarnings.toFixed(2)}`;
                memberSince.textContent = user.memberSince;
                
                // Atualizar transa√ß√µes
                const transactionsList = document.getElementById('transactionsList');
                transactionsList.innerHTML = '';
                
                user.transactions.slice(0, 3).forEach(transaction => {
                    const transactionItem = document.createElement('div');
                    transactionItem.className = 'transaction-item';
                    
                    transactionItem.innerHTML = `
                        <div class="transaction-info">
                            <span class="transaction-type">${transaction.type}</span>
                            <span class="transaction-date">${transaction.date}</span>
                        </div>
                        <div class="transaction-amount ${transaction.isPositive ? 'positive' : 'negative'}">
                            ${transaction.isPositive ? '+' : '-'}$${transaction.amount.toFixed(2)}
                        </div>
                    `;
                    
                    transactionsList.appendChild(transactionItem);
                });
            } else {
                authButtons.style.display = 'flex';
                userInfo.style.display = 'none';
                adminBtn.style.display = 'none';
                showPublicHome();
            }
        }
        
        // Mostrar p√°ginas
        function showPublicHome() {
            publicHome.style.display = 'block';
            publicStats.style.display = 'block';
            publicFeatures.style.display = 'block';
            publicTestimonials.style.display = 'block';
            publicSupport.style.display = 'block';
            dashboard.style.display = 'none';
            adminPanel.style.display = 'none';
        }
        
        function showDashboard() {
            publicHome.style.display = 'none';
            publicStats.style.display = 'none';
            publicFeatures.style.display = 'none';
            publicTestimonials.style.display = 'none';
            publicSupport.style.display = 'none';
            dashboard.style.display = 'block';
            adminPanel.style.display = 'none';
        }
        
        function showAdminPanel() {
            publicHome.style.display = 'none';
            publicStats.style.display = 'none';
            publicFeatures.style.display = 'none';
            publicTestimonials.style.display = 'none';
            publicSupport.style.display = 'none';
            dashboard.style.display = 'none';
            adminPanel.style.display = 'block';
        }
        
        // Simular rendimento di√°rio
        setInterval(() => {
            if (user.loggedIn && user.daysLeft > 0) {
                user.balance += user.dailyEarnings;
                user.totalEarnings += user.dailyEarnings;
                user.daysLeft--;
                
                // Adicionar transa√ß√£o de rendimento
                const transaction = {
                    type: "Rendimento Di√°rio",
                    date: new Date().toLocaleString('pt-BR'),
                    amount: user.dailyEarnings,
                    isPositive: true
                };
                user.transactions.unshift(transaction);
                
                updateUI();
                
                if (user.daysLeft === 0) {
                    alert('Seu investimento expirou. Por favor, reinvista para continuar recebendo rendimentos.');
                }
            }
        }, 30000); // Atualiza a cada 30 segundos para demonstra√ß√£o
        
        // Inicializar UI
        updateUI();
    </script>
</body>
</html>
